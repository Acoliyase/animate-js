{
  "compilerOptions": {
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noUnusedLocals": false,
    "target": "ES2020",
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "outDir": "dist/esm",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "node_modules",
  ]
}
